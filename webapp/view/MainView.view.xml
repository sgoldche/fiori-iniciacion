<mvc:View
    controllerName="Logalicourse.orders.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
                    <content>
                        <Panel headerText="{i18n>headerSelScreen}">
                            <Label id="labelShipName" labelFor="shipName" text="{i18n>labelShipName}" class="sapUISmallMargen"/>
                            <Input id="shipName" value="{selectionScreen>/ShipName}" width="200px" class="sapUiSmallMarginEnd"/>
                            <Label id="labelCountry" text="{i18n>labelCountry}" class="sapUISmallMargin"/>
                            <Select id="slCountry" selectedKey="{selectionScreen>/CountryKey}"
                                    forceSelection="false"
                                    items="{selectionScreen>/Countries}">
                                <items> 
                                    <core:Item key="{selectionScreen>key}" text="{selectionScreen>text}"/>
                                </items>
                            </Select>
                            <Button id="btnFilter"
                                    text="{i18n>btnFilter}"
                                    icon="sap-icon://filter"
                                    press="onFilter"
                                    class="sapUiSmallMarginEnd"/>
                            <Button id="btnClearFilter"
                                    text="{i18n>btnClearFilter}"
                                    icon="sap-icon://clear-filter"
                                    press="onClearFilter"
                                    class="sapUiSmallMarginEnd"/>
                        </Panel>
                    </content> 
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
